# API Settings
API_TITLE=SimIIR API
API_VERSION=0.1.0
API_DESCRIPTION=FastAPI wrapper for simIIR framework

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./simiir_api.db

# SimIIR Settings
# IMPORTANT: Update these paths to match your setup
# Expected directory structure:
#   simiir-studio/
#   ├── simiir/              (simIIR repository cloned here)
#   │   ├── simiir/
#   │   │   └── run_simiir.py
#   │   └── example_data/
#   └── simiir-api/          (this API wrapper)
#
# Use absolute paths or relative paths from simiir-api/ directory
SIMIIR_REPO_PATH=../simiir
SIMIIR_PYTHON_PATH=../simiir
SIMIIR_DATA_PATH=../simiir/example_data

# Or use absolute paths (recommended):
# SIMIIR_REPO_PATH=/absolute/path/to/simiir
# SIMIIR_PYTHON_PATH=/absolute/path/to/simiir
# SIMIIR_DATA_PATH=/absolute/path/to/simiir/example_data

# Simulation Settings
MAX_CONCURRENT_SIMULATIONS=3
CHECKPOINT_INTERVAL=100
OUTPUT_BASE_PATH=./outputs

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/simiir_api.log
